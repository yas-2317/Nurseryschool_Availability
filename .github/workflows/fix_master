name: Fix master_facilities via Google Places

on:
  workflow_dispatch:
    inputs:
      ward_filter:
        description: "対象区（例：港北区）。空欄なら masterのward列に従って全件対象"
        required: false
        default: "港北区"
      max_updates:
        description: "この実行で更新する最大件数（コスト制御）"
        required: true
        default: "80"
      only_bad_rows:
        description: "怪しい行だけ更新する（1推奨）"
        required: true
        default: "1"
      strict_address_check:
        description: "横浜市＋区を含む住所だけ採用（1推奨。誤爆防止）"
        required: true
        default: "1"
      sleep_sec:
        description: "API連打防止のスリープ（秒）"
        required: true
        default: "0.15"
      overwrite_phone:
        description: "phoneを上書きする（0:空欄のみ埋める / 1:上書き）"
        required: true
        default: "0"
      overwrite_website:
        description: "websiteを上書きする（0:空欄のみ / 1:上書き）"
        required: true
        default: "0"
      overwrite_map_url:
        description: "map_urlを上書きする（0:空欄のみ / 1:上書き）"
        required: true
        default: "0"

permissions:
  contents: write

concurrency:
  group: fix-master
  cancel-in-progress: false

jobs:
  fix-master:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install requests

      - name: Run fixer
        env:
          GOOGLE_MAPS_API_KEY: ${{ secrets.GOOGLE_MAPS_API_KEY }}
          WARD_FILTER: ${{ inputs.ward_filter }}
          MAX_UPDATES: ${{ inputs.max_updates }}
          ONLY_BAD_ROWS: ${{ inputs.only_bad_rows }}
          STRICT_ADDRESS_CHECK: ${{ inputs.strict_address_check }}
          GOOGLE_API_SLEEP_SEC: ${{ inputs.sleep_sec }}
          OVERWRITE_PHONE: ${{ inputs.overwrite_phone }}
          OVERWRITE_WEBSITE: ${{ inputs.overwrite_website }}
          OVERWRITE_MAP_URL: ${{ inputs.overwrite_map_url }}
        run: |
          set -euxo pipefail
          ls -la data || true
          python -u scripts/fix_master_with_google_places.py
          echo "---- outputs ----"
          ls -la data | sed -n '1,200p'
          echo "---- sample updates ----"
          if [ -f data/master_facilities_updates.csv ]; then
            head -n 20 data/master_facilities_updates.csv
          fi
          echo "---- sample misses ----"
          if [ -f data/geocode_misses.csv ]; then
            head -n 20 data/geocode_misses.csv
          fi

      - name: Commit & push changes
        run: |
          set -euxo pipefail
          git status --porcelain
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"

          # 変更がない場合は成功扱いで終了
          if [ -z "$(git status --porcelain)" ]; then
            echo "No changes."
            exit 0
          fi

          git add data/master_facilities.csv data/master_facilities_updates.csv data/geocode_misses.csv || true
          git commit -m "Fix master_facilities via Google Places" || true

          # remoteの更新が進んでいても落ちにくいようにrebaseしてpush
          git pull --rebase origin main
          git push origin main
